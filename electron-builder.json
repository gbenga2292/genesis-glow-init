{
  "appId": "com.dewaterconstruct.inventory",
  "productName": "DCEL Inventory",
  "directories": {
    "output": "release"
  },
  "compression": "store",
  "icon": "build/icon.ico",
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/favicon.ico",
    "public/favicon.png",
    "public/logo.png",
    "node_modules/**/*",
    "!node_modules/@capacitor/**/*",
    "!node_modules/@capawesome/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "resources/llm",
      "to": "llm",
      "filter": [
        "**/*"
      ]
    }
  ],
  "extraMetadata": {
    "main": "electron/main.js"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "build/icon.ico",
    "verifyUpdateCodeSignature": false,
    "forceCodeSigning": false,
    "signAndEditExecutable": false,
    "artifactName": "dcel_inventory.${ext}"
  },
  "protocols": [
    {
      "name": "DCEL Inventory Protocol",
      "schemes": [
        "dcel-inventory"
      ]
    }
  ],
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "DCEL Inventory",
    "installerIcon": "build/icon.ico",
    "uninstallerIcon": "build/icon.ico",
    "deleteAppDataOnUninstall": true
  },
  "portable": {
    "artifactName": "${productName} ${version} Portable.${ext}"
  },
  "mac": {
    "target": [
      "dmg"
    ],
    "icon": "public/favicon.png",
    "category": "public.app-category.business"
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "icon": "public/favicon.png",
    "category": "Office"
  },
  "npmRebuild": false,
  "nodeGypRebuild": false,
  "buildDependenciesFromSource": false
}